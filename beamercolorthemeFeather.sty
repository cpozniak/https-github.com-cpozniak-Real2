%----------------------------------------------------------------------------------------------------------------------------------

% beamer specific options


               \mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{

%----------------------------------------------------------------------------------------------------------------------------------

% colors
%% defining colors 
               \definecolor{beamer@barcolor}{RGB}{0.36, 0.22, 0.33}% light blue
               \definecolor{beamer@normaltextcolor}{RGB}{0.36, 0.22, 0.33}% gray blue
               \definecolor{beamer@headercolor}{rgb}{0.36, 0.22, 0.33} % dark blue

%% setting the above deffinitions

               \setbeamercolor{author in foot}{fg=black!55,  bg=gray!5}
               \setbeamercolor{structure}{fg=beamer@headercolor}
               \setbeamercolor{normal text}{fg=beamer@normaltextcolor}
               \setbeamercolor{frametitle}{fg=white, bg=beamer@headercolor}
               \setbeamercolor{Feather}{fg=beamer@barcolor,bg=beamer@headercolor}
               \setbeamercolor{date in foot}{fg=white,  bg=beamer@headercolor}
}

\mode<all>
